{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "baseUrl": "./",
    "checkJs": true,
    "paths": {
      "_components/*": ["src/components/Screens/Components/*"],
      "_components": ["src/components/Screens/Components/index.ts"],
      "_utils/*": ["src/components/Utils/*"],
      "_utils": ["src/components/Utils/index.ts"],
      "_styles/*": ["src/styles/*"],
      "_styles": ["src/styles/index.js"],
      "_store": ["src/store.ts"],
      "_generics/*": ["src/components/Generics/*"],
      "_generics": ["src/components/Generics/index.ts"],
      "_types/*": ["src/components/@types/*"],
      "_types": ["src/components/@types/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
